{
    "compilerOptions": {
        "target": "es5",
        "module": "amd",
        "moduleResolution": "classic",
        "outFile": "built/main.js",
        "sourceMap": true,

        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,

        "declaration": false,
        "experimentalDecorators": false,
        "emitDecoratorMetadata": false,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,

        "removeComments": true

        // causes RangeError: Maximum call stack size exceeded with tsc 2.1.4
        // "strictNullChecks": true
    },
    "files": [
      "src/App.ts"
    ],
    "compileOnSave": false,
    "buildOnSave": false
}
