{
  "name": "spacegame",
  "version": "0.1.0",
  "dependencies": {
    "pixi.js": "4.5.3"
  },
  "devDependencies": {
    "typescript": "2.8.x",
    "less": "2.6.x",
    "tslint": "5.9.x",
    "ncp": "2.0.x",
    "mkdirp": "0.5.x",
    "prettier": "1.13.2",

    "@types/react": "15.x",
    "@types/react-dom": "15.x",
    "@types/react-transition-group": "1.x"
  },
  "scripts": {
    "postinstall": "mkdirp dist && npm run copy-dependencies",

    "build": "tsc && lessc ./css/main.less ./dist/main.css",
    "copy-dependencies": "ncp node_modules/pixi.js/dist/pixi.js dist/pixi.js",
    "lint": "tslint \"{src,modules,localization}/**/*.ts\"",
    "lintfix": "tslint \"{src,modules,localization}/**/*.ts\" --fix",
    "format": "prettier --write \"{src,modules,localization}/**/*.ts\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/giraluna/spacegame.git"
  }
}
